<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
		<title>For EC-CUBE3 Plugin</title>
        <meta http-equiv="Content-type" content="text/html; charset=UTF-8" />
		<link rel='stylesheet' href='/stylesheets/style.css' />
		<script src="/socket.io/socket.io.js"></script>
		<script src="/javascripts/jquery.js"></script>
		<script src="/javascripts/nicoscreen.js"></script>
	</head>
	<body>
    <div id="nicoscreen" style="width='<%= width %>';height='<%= height %>;">
        <img src="/images/mv01.jpg" style="width='<%= width %>';height='<%= height %>;">
       </div> 
		<script type="text/javascript">
        (function($){
            var obj = {
                "base":{
                    color:"white",
                    speed:"normal",
                    interval:"normal",
                    font_size:"30px",
                    loop:true
                },
                "comments":[
                ]
            };

            nicoscreen.set(obj);
            nicoscreen.start();
        
        
			//websocket開始
            var socket = io.connect('<%= url %>');
            socket.on('connect', function() {});
            //PHPの通信データ
            socket.on('ordershow', function(data) {
                if(data){
                    console.log(data.orders);
                    nicoscreen.add(data.orders);
                }
            });
            socket.on('disconnect', function(){
            });
        })(jQuery);
		</script>
	</body>
</html>
